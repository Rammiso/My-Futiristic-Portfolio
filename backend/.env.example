# ====================================
# SERVER CONFIGURATION
# ====================================
PORT=5000
NODE_ENV=development

# ====================================
# DATABASE CONFIGURATION
# ====================================
# MongoDB Connection String
# Get this from MongoDB Atlas or your MongoDB instance
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority

# ====================================
# JWT AUTHENTICATION
# ====================================
# Secret key for access tokens (30 minutes expiration)
# IMPORTANT: Use a strong random string (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production_min_32_chars

# Secret key for refresh tokens (7 days expiration)
# IMPORTANT: Use a different strong random string than JWT_SECRET
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_this_min_32_chars

# Token expiration times
JWT_ACCESS_EXPIRE=30m
JWT_REFRESH_EXPIRE=7d

# ====================================
# EMAIL CONFIGURATION (Nodemailer)
# ====================================
# SMTP Server Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Gmail Account Credentials
# IMPORTANT: Use Gmail App Password, not your regular password
# How to get App Password: https://support.google.com/accounts/answer/185833
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_16_chars

# Email sender information
EMAIL_FROM=Musab Portfolio <your_email@gmail.com>

# Admin email to receive contact form notifications
ADMIN_EMAIL=your_email@gmail.com

# ====================================
# CLIENT CONFIGURATION
# ====================================
# Frontend URL for CORS (comma-separated for multiple origins)
# Development
CLIENT_URL=http://localhost:5173

# Production (uncomment and update when deploying)
# CLIENT_URL=https://your-portfolio-domain.com

# ====================================
# OPTIONAL: AI SERVICES
# ====================================
# OpenAI API Key (only if using AI Playground feature)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ====================================
# SECURITY CONFIGURATION
# ====================================
# Set to false after creating your admin account to disable registration
ALLOW_REGISTRATION=true
